---
import LinkedIn from "./Icon/LinkedIn.astro";
import GitHub from "./Icon/GitHub.astro";

const today = new Date();
---

<footer
  class="sm:mx-auto
  sm:max-w-2xl
  px-4
  sm:px-8
  lg:px-0
  antialiased
  md:max-w-6xl"
>
  <div class="py-10 border-t border-slate-200 dark:border-slate-700">
    <div class="flex items-center justify-between">
      <span class="text-sm">&copy; {today.getFullYear()} Nam Vo's blog.</span>
      <span class="flex gap-4">
        <a
          href="/policy-privacy"
          class="text-sm hover:text-primary-600 active:text-primary-700 hover:underline"
          >Điều khoản</a
        >
        <a
          href="/rss.xml"
          class="text-sm hover:text-primary-600 active:text-primary-700 hover:underline"
          >RSS</a
        >
      </span>
    </div>
  </div>
  <div class="flex justify-center gap-3 pb-20">
    <a
      href="https://www.linkedin.com/in/namvh"
      role="button"
      target="_blank"
      rel="noopener noreferrer"
      class="bg-blue-600 hover:bg-blue-500 active:bg-blue-800 p-2 font-semibold text-white inline-flex items-center space-x-2 rounded"
    >
      <LinkedIn />
    </a>

    <a
      href="https://github.com/vhnam"
      role="button"
      target="_blank"
      rel="noopener noreferrer"
      class="bg-gray-700 hover:bg-gray-600 active:bg-gray-800 p-2 font-semibold text-white inline-flex items-center space-x-2 rounded"
    >
      <GitHub />
    </a>
  </div>
</footer>
