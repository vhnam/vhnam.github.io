---
import { SITE_TITLE } from "../consts";

import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<nav
  class="fixed inset-x-0 top-0 border-b border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 z-50"
>
  <div class="container mx-auto">
    <div class="flex items-centers justify-between py-6 px-4 xl:px-0">
      <a
        href="/"
        class="font-display text-2xl font-bold text-slate-900 dark:text-slate-200 hover:text-sky-500 dark:hover:text-sky-400"
      >
        {SITE_TITLE}
      </a>
      <div class="flex items-center gap-6">
        <HeaderLink href="/tutorials">Phần mềm</HeaderLink>
        <HeaderLink href="/hobbies">Giải trí</HeaderLink>
        <ThemeToggle />
      </div>
    </div>
  </div>
</nav>
